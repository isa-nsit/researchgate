
<div class="container">
    <h1>Edit Profile</h1>
    <hr>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
  
  <div class="row">
      <div class="col-md-12 personal-info">
        <div class="alert personal">
          <i class="fa fa-coffee"></i>
          Change Your <strong>Credentials</strong> Here!
        </div>
        <h3 class="page-header"></h3>
          <div class="form-group">
            <%=f.label :email , class:'col-lg-3 control-label'%>
            <div class="col-lg-8">
              <%= f.email_field :email, autofocus: true,class:'form-control'%>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert personal alert-dismissable">
              <a class="panel-close close" data-dismiss="alert">Ã—</a> 
              <i class="fa fa-coffee"></i>
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <div class="form-group">
            <%=f.label :password , class:'col-lg-3 control-label'%>

            <% if @minimum_password_length %>
            
            <div class="col-lg-8"><%=f.password_field :password, placeholder:'Leave Blank If you Dont Want to Change Or Enter New password (#{@minimum_password_length} characters minimum)',autocomplete:"off",class:'form-control'%>
            </div>
            
            <% else %>
              <div class="col-lg-8"><%=f.password_field :password, placeholder:'Leave Blank If you Dont Want to Change',autocomplete:"off",class:'form-control'%>
            </div>
            <% end %>
          </div>
          
          <div class="form-group">
            <%=f.label :password_confirmation , class:'col-lg-3 control-label'%>
            <div class="col-lg-8"><%=f.password_field :password_confirmation, placeholder:'Leave Blank If Password is Not Changed' ,class:'form-control'%></div>
          </div>

          <div class="form-group">
            <%=f.label :current_password , class:'col-lg-3 control-label'%>
            <div class="col-lg-8"><%=f.password_field :current_password,placeholder:'We Need Your Current Password to Confirm Your Changes',autocomplete:"off",class:'form-control'%></div>
          </div>
          <div class="form-group actions">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <%=f.submit "Update",class:'btn save'%>
              <%= link_to "Back <span class='glyphicon glyphicon-share-alt'></span>".html_safe, :back ,class:'btn save'%>
            </div>
          </div>
      </div>
  </div>
  <% end %>
  
<label class="col-md-3"></label>
<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:'btn danger'%>
</div>

<style type="text/css">
@media screen and (max-width: 1099px)
{
  .btn.danger{
    margin-left: 4%;
    margin-top: -10%;
  }
}
.save{
  background-color: #072c61;
  color:white;
}
.save:hover,.danger:hover,.btn:focus{
  color:white;
}
.danger{
  margin: 1%;
}
.personal{
  background-color: #072c61;
  color:white;
}
.form-control:focus {
  border-color: #072c61;
}
.danger{
  background-color: #d74338;
  color:white;
}
.form-control{
  margin-bottom: 20px;
}
</style>

